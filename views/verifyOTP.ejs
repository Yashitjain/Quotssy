<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        #body{
            background-image: url("images/background2.jpg");
            background-clip: text;
            font-weight: 600;
        }
        #heading{
            width: fit-content;
            margin-inline:auto;
            margin-top: 30vh;
        }
        #body{
            display: flex;
        }
        #left{
            width: 50vw;
            height: 100vh;
            margin-top: 0px;
        }
        #right{
            width: 50vw;
            height: 100vh;
            margin-top: 0px;
        }
        #verificationCard{
            width: 18rem; 
            margin-inline: auto; 
            margin-top: 23vh;
        }
       
        @media (max-width:400px){
        #heading{
            padding-top: 3vh;
            margin-inline:auto;
            width: fit-content;
            margin-top: 0px;
        }
        #body{
            display: block;
        }
        #left{
            width: 100%;
            height: 20vh;
            margin-top: 7vh;
        }
        #right{
            width: 100%;
            height: 40vh;
        }
        #verificationCard{
            width: 18rem; 
            margin-inline: auto; 
            margin-top: 10%;
        }
        }
    </style>
    <%- include('../partials/css.ejs') %>
    <title>Quotssy</title>
</head>
<body>
    <div id="body">
        <div id="left" style="background-color: grey;">
            <h1 id="heading">
                Quotsyy
            </h1>
        </div>
        <div id="right">
            <% if (locals.error) { %>
                <div class="alert alert-danger" role="alert">
                  Incorrect OTP
                </div>
              <% } %>
            <div class="card" id="verificationCard">
                <div class="card-body">
                  <h5 class="card-title">OTP VERIFICATION</h5>
                  <form action="/verification" method="post">
                    <p class="card-text">Enter the OTP send to your registered Email.</p>
                    <label class="form-label" style="margin-left: 15px;">Enter OTP</label>
                    <input type="form" class="form-control" aria-describedby="emailHelp" name="otp">
                    <button class="btn btn-primary" style="margin: 15px;">Submit</button>
                  </form>
                </div>
              </div>
        </div>
    </div>


    <%- include("../partials/script.ejs") %>
</body>
</html>